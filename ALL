/*--------Write an Embedded C program for sorting the numbers in ascending order.----*/
/*--------Write an Embedded C program for sorting the numbers in ascending order.----*/
/*--------Write an Embedded C program for sorting the numbers in ascending order.----*/
/*--------Write an Embedded C program for sorting the numbers in ascending order.----*/
/*--------Write an Embedded C program for sorting the numbers in ascending order.----*/
 
 
#include <stdio.h>
#include <stdlib.h>
#include <p18f4550.h>
void main(void) 
{
    int i, j, temp;
    int num_arr[] = {8,2,10,12};
    for(i=0; i<=4; i++)
   {                 	
        for(j=i+1; j<=4; j++)
        {                     
               if (num_arr[i] > num_arr[j])
               {                
                       temp = num_arr[i];
                       num_arr[i] =num_arr[j];
                       num_arr[j]= temp;
               }
         }
     }
}
 
