/*-----------------------Write simple program using  Arduino  blinking  2 LEDs  using           different  delay.-------------------------*/
/*-----------------------Write simple program using  Arduino  blinking  2 LEDs  using           different  delay.-------------------------*/
/*-----------------------Write simple program using  Arduino  blinking  2 LEDs  using           different  delay.-------------------------*/
/*-----------------------Write simple program using  Arduino  blinking  2 LEDs  using           different  delay.-------------------------*/
/*-----------------------Write simple program using  Arduino  blinking  2 LEDs  using           different  delay.-------------------------*/
/*-----------------------Write simple program using  Arduino  blinking  2 LEDs  using           different  delay.-------------------------*/
 
 
void setup()
{
  pinMode(13, OUTPUT);
  pinMode(12, OUTPUT);
}
 
void loop()
{
  digitalWrite(13, HIGH);
  delay(1000);   
  digitalWrite(13, LOW);
  delay(1000); 
  digitalWrite(12, HIGH);
  delay(100);
  digitalWrite(12, LOW);
}
 
