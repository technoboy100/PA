/*-------------------Write an Embedded C program for Generating PWM signal for DC motor.-----------------------*/
 
#include <stdio.h>
#include <stdlib.h>
#include <p18F4550.h>
#pragma config FOSC = HS
#pragma config WDT = OFF
#pragma config LVP = OFF
#pragma config PBADEN = OFF
void main(){
TRISC = 0x00;
PR2= 0x04D;
CCP1CON = 0x0c;
T2CON = 0x07;
PORTCbits .RC6 = 1;
PORTCbits .RC6 = 0;
while(1){
CCP1CONbits.DC1B1 = 1;
CCP1CONbits.DC1B0 = 0;
CCPR1L = 0x3D;
 
}
 
}
